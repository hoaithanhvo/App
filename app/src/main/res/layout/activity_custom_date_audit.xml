<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomDateAuditActivity"
    android:fitsSystemWindows="true">
    <LinearLayout
        style="@style/LinearLayoutCustomStyle"
        android:id="@+id/lnstartAudit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_button"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_startAudit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/start_audit_date"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <Button
            android:id="@+id/bntdatePickerStart"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JAN 01 2020"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutCustomStyle"
        android:id="@+id/lnendAudit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_button"
        android:layout_marginTop="80dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_endAudit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/end_audit_date"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bntdatePickerEnd"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JAN 01 2020"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </LinearLayout>

    <Button
        android:id="@+id/bntSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>