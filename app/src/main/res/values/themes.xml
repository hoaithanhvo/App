<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NidecSnipeIt" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <!-- Color hover button -->
        <item name="colorOnPrimary">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Main theme. -->
    <style name="Theme.MainCustom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Login theme. -->
    <style name="Theme.LoginCustom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <!-- Color hover button -->
        <item name="colorOnPrimary">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <item name="colorOnSecondary">@color/secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Audit theme. -->
    <style name="Theme.AuditCustom" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <!-- Color hover button -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <item name="colorOnSecondary">@color/secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>